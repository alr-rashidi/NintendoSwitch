{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleDetection": "force",
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "module": "preserve",
    "noEmit": false,
    "skipLibCheck": true,
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./build",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*",
    "custom.d.ts"
  ]
}